<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/PrimaryLight"
    android:elevation="0dp">

    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_arrow_back" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_profile_pic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="8dp"
        android:src="@drawable/empty_profile_pic" />

    <TextView
        android:id="@+id/text_view_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/PrimaryDark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image_view_share"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_share" />

    <ImageView
        android:id="@+id/image_view_search"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_search_black" />

    <ImageView
        android:id="@+id/image_view_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="8dp"
        android:src="@drawable/ic_arrow_back_secondary_dark"
        android:visibility="gone" />

    <AutoCompleteTextView
        android:id="@+id/searchField"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/SecondaryDark"
        android:completionThreshold="1"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Search messages..."
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:text=""
        android:textColor="@color/SecondaryDark"
        android:textColorHint="@color/SecondaryDark"
        android:textSize="18sp"
        android:visibility="gone" />

</androidx.appcompat.widget.Toolbar>